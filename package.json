{
    "name": "ned",
    "description": "A theme for luddite.beer",
    "version": "0.0.3",
    "private": true,
    "engines": {
        "ghost": ">=5.0.0"
    },
    "license": "MIT",
    "author": {
        "name": "Garrett Allen",
        "email": "g@garrettis.online",
        "url": "https://garrettis.online"
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
        "beer"
    ],
    "config": {
        "posts_per_page": 5,
        "image_sizes": {
            "xs": {
                "width": 150
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 720
            },
            "l": {
                "width": 960
            },
            "xl": {
                "width": 1200
            },
            "xxl": {
                "width": 2000
            }
        },
        "card_assets": true,
        "custom": {
            "style": {
                "type": "select",
                "options": ["Elegant", "Playful"],
                "default": "Playful"
            },
            "background_color": {
                "type": "color",
                "default": "#fafafa"
            },
            "navigation_layout": {
                "type": "select",
                "options": ["Logo on the left", "Logo in the middle", "Stacked"],
                "default": "Logo in the middle"
            },
            "email_signup_text": {
                "type": "text",
                "default": "Subscribe for rare missives."
            },
            "footer_text": {
                "type": "text"
            },
            "primary_header": {
                "type": "text",
                "default": "Esoteric and Traditional Brews",
                "group": "homepage"
            },
            "secondary_header": {
                "type": "text",
                "default": "Sparging responsibly since 2010.",
                "group": "homepage"
            },
            "header_action": {
                "type": "select",
                "options": ["Subscribe", "Search", "No action"],
                "default": "Search",
                "group": "homepage"
            },
            "enter_tag_slugs_for_homepage_sections": {
                "type": "text",
                "group": "homepage"
            }
        }
    },
    "scripts": {
        "dev": "gulp",
        "test": "gscan .",
        "zip": "gulp zip"
    },
    "devDependencies": {
        "@tryghost/shared-theme-assets": "2.1.1",
        "autoprefixer": "10.4.14",
        "beeper": "2.1.0",
        "cssnano": "6.0.1",
        "gscan": "4.36.3",
        "gulp": "4.0.2",
        "gulp-concat": "2.6.1",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-uglify": "3.0.2",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.24",
        "postcss-easy-import": "4.0.0",
        "pump": "3.0.0"
    }
}
